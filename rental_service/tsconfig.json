{
    "compilerOptions": {
      "incremental": true,
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": false,
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}